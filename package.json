{
  "name": "@erickmerchant/assets",
  "version": "16.0.0",
  "description": "Generate css using postcss, and js using browserify and babel.",
  "main": "index.js",
  "bin": {
    "assets": "./cli.js"
  },
  "standard": {
    "ignore": [
      "fixtures"
    ]
  },
  "scripts": {
    "test": "standard && tape test.js",
    "fixtures": "npm run fixtures:min && npm run fixtures:no-min && npm run fixtures:electron",
    "fixtures:browser": "node ./cli.js --browser 'Chrome <= 47' fixtures/js/index.js fixtures/css/index.css",
    "fixtures:min": "npm run fixtures:browser -- fixtures/build-min/",
    "fixtures:no-min": "npm run fixtures:browser -- --no-min fixtures/build-no-min/",
    "fixtures:electron": "node ./cli.js --electron fixtures/js/electron.js fixtures/build-electron/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erickmerchant/assets.git"
  },
  "author": "Erick Merchant <erickmerchant@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/erickmerchant/assets/issues"
  },
  "homepage": "https://github.com/erickmerchant/assets#readme",
  "dependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@erickmerchant/conditional-watch": "^3.1.0",
    "autoprefixer": "^9.1.5",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "babel-plugin-unassert": "^2.1.2",
    "babelify": "^10.0.0",
    "browser-pack-flat": "^3.2.0",
    "browserify": "^16.2.2",
    "chalk": "^2.4.1",
    "common-dir": "^2.0.2",
    "common-shakeify": "^0.5.1",
    "cssnano": "^4.1.0",
    "exorcist": "^1.0.1",
    "make-dir": "^1.3.0",
    "minify-stream": "^1.2.0",
    "nanohtml": "^1.2.3",
    "postcss": "^7.0.2",
    "postcss-import": "^12.0.0",
    "postcss-preset-env": "^5.3.0",
    "sergeant": "^22.1.0",
    "stream-to-promise": "^2.2.0"
  },
  "devDependencies": {
    "execa": "^1.0.0",
    "standard": "^12.0.1",
    "tape": "^4.9.1"
  }
